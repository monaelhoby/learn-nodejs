<!DOCTYPE html>

  <%- include('./shared/header.ejs')%>
  <%- include('./shared/navbar.ejs')%>

  <div class="container">
      <input type="hidden" id="chatId" value="<%= chatId %>">
      <div class="chat-container">
      <div class="row">
          <div class="col col-12 col-md-3">
              <div class="image">
                <img src="/<%= friendData.image%>" width="120px" height="150px"/>
                <div>
                <a href="/profile/<%= friendData.id%>">
                  <%= friendData.userName%>
                </a>
                <div><button id="btnVideoCall" class="btn btn-success">Video Call</button></div>
                </div>
              </div>
          </div>
          <div class="col col-12 col-md-9 messages">
            <div id="messages-container">
                <% for(let message of messages){ %>
                    <p class="msg <%= String(message.sender) === isUser? 'left' : 'right'%>">
                        <%= message.content%>
                    </p>
                <% } %>
            </div>
            <div class="message-form">
                <textarea id="message"></textarea>
                <button class="btn btn-customize-color" id="sendBtn">send</button>
            </div>
          </div>
      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <script src="/scripts/socket/init.js"></script>
  <!-- <script src="/scripts/socket/home.js"></script> -->
  <script src="/scripts/socket/chat.js"></script>
  <%- include('./shared/footer.ejs')%>