<!DOCTYPE html>

  <%- include('./shared/header.ejs')%>
  <%- include('./shared/navbar.ejs')%>
    <div class="productDetail">
        <div class="container">
            <% if(!product) { %>
                <p class="alert alert-danger">There is no Product</p>
            <% } else { %>
                <div class="row">
                    <div class="col-md-6">
                        <img src="/<%= product.image %>" class="card-img-top mb-3" alt="...">
                        <form action="/cart" method="POST">
                            <div class="mb-3 form-check">
                            <input type="number" class="form-control" name="amount" >
                            <input type="hidden" name="name" value="<%= product.name %>" >
                            <input type="hidden" name="price" value="<%= product.price %>" >
                            <input type="hidden" name="productId" value="<%= product._id %>" >
                            </div>
                        <button type="submit" class="btn btn-primary btn-customize-color">Add To Card</button>
                      </form>
                    </div>
                    <div class="col-md-6">
                        <h3><%= product.name%></h3>
                        <p><strong>Price: </strong><%= product.price%></p>
                        <p><%= product.description%></p>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

  <%- include('./shared/footer.ejs')%>